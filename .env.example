# YouTube Research Video Clip Finder - Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Debug mode (true/false)
DEBUG=true

# Application secret key for JWT and encryption
SECRET_KEY=your-super-secret-key-here-change-this-in-production

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# API Server
API_HOST=0.0.0.0
API_PORT=8000

# Frontend Server (for development)
FRONTEND_HOST=localhost
FRONTEND_PORT=3000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database URL (SQLite for development, PostgreSQL for production)
DATABASE_URL=sqlite:///./data/youtube_clip_finder.db

# PostgreSQL (for production)
# DATABASE_URL=postgresql://username:password@localhost:5432/youtube_clip_finder
POSTGRES_USER=youtube_user
POSTGRES_PASSWORD=secure_password
POSTGRES_DB=youtube_clip_finder
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# =============================================================================
# YOUTUBE API CONFIGURATION
# =============================================================================

# YouTube Data API v3 Key (Required)
YOUTUBE_API_KEY=your-youtube-api-key-here

# YouTube API Configuration
YOUTUBE_API_BASE_URL=https://www.googleapis.com/youtube/v3
YOUTUBE_API_QUOTA_LIMIT=10000
YOUTUBE_API_REQUESTS_PER_SECOND=100

# =============================================================================
# AI SERVICES CONFIGURATION
# =============================================================================

# OpenAI API (for prompt enhancement, NER, sentiment analysis)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# Whisper Configuration (for transcription)
WHISPER_MODEL=base
WHISPER_DEVICE=cpu
WHISPER_LANGUAGE=en

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================

# Local storage paths
DATA_DIR=./data
CACHE_DIR=./cache
DOWNLOADS_DIR=./downloads
TRANSCRIPTS_DIR=./data/transcripts
CLIPS_DIR=./data/clips

# AWS S3 Configuration (optional, for cloud storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=youtube-clip-finder-storage

# =============================================================================
# FEEDBACK SYSTEM CONFIGURATION
# =============================================================================

# Feedback storage
FEEDBACK_STORAGE_PATH=./data/feedback

# Email notifications for feedback
FEEDBACK_EMAIL_ENABLED=false
FEEDBACK_SMTP_SERVER=smtp.gmail.com
FEEDBACK_SMTP_PORT=587
FEEDBACK_SMTP_TLS=true
FEEDBACK_SMTP_USERNAME=your-email@gmail.com
FEEDBACK_SMTP_PASSWORD=your-app-password
FEEDBACK_FROM_EMAIL=noreply@youtube-clip-finder.example.com
FEEDBACK_TO_EMAIL=support@youtube-clip-finder.example.com

# =============================================================================
# CACHING CONFIGURATION
# =============================================================================

# Redis (for caching, optional)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Cache TTL (Time To Live) in seconds
CACHE_TTL_SEARCH=3600
CACHE_TTL_TRANSCRIPTION=86400
CACHE_TTL_METADATA=43200

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=./logs/app.log

# Log format
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# =============================================================================
# MONITORING AND ANALYTICS
# =============================================================================

# Sentry (for error tracking, optional)
SENTRY_DSN=your-sentry-dsn-here

# Google Analytics (optional)
GA_TRACKING_ID=your-ga-tracking-id

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Video download service (youtube-dl/yt-dlp)
YTDL_PATH=yt-dlp
YTDL_FORMAT=best[height<=720]
YTDL_EXTRACT_FLAT=false

# FFmpeg (for video processing)
FFMPEG_PATH=ffmpeg

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Hot reload for development
HOT_RELOAD=true

# API documentation
DOCS_ENABLED=true
DOCS_URL=/docs
REDOC_URL=/redoc

# Testing
TEST_DATABASE_URL=sqlite:///./test.db
TEST_YOUTUBE_API_KEY=test-api-key

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
FEATURE_AI_CLIP_DETECTION=true
FEATURE_AUTOMATIC_TRANSCRIPTION=true
FEATURE_SENTIMENT_ANALYSIS=true
FEATURE_ENTITY_RECOGNITION=true
FEATURE_BATCH_DOWNLOAD=true
FEATURE_CLOUD_STORAGE=false

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Worker processes
WORKER_PROCESSES=1

# Max concurrent downloads
MAX_CONCURRENT_DOWNLOADS=3

# Max file size for uploads (in bytes)
MAX_UPLOAD_SIZE=52428800

# Request timeout (in seconds)
REQUEST_TIMEOUT=30

# =============================================================================
# DEPLOYMENT SETTINGS
# =============================================================================

# Docker settings
DOCKER_ENV=false

# Health check settings
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# Backup settings
BACKUP_ENABLED=false
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
